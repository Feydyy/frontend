<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <script>

        /// “  Çağatay Yıldız” isimli metindeki boşlukları kaldır.    (REPLACE)
        var firstname = " Çağatay Yıldız"
        const result1 = firstname.replace(" ", "");
        console.log(result1);

        /// "cagatay yildiz" kelimesindeki boşlukları temizle ve tüm harfleri büyült
        var name1 = "cagatay yildiz"
        const result2 = name1.replace(" ", "").toUpperCase();
        console.log(result2);

        /// “******Çağatay Yıldız” isimli metindeki yıldızları kaldır (REPLACE)
        var name2 = "******Çağatay Yıldız"
        var result3 = name2.replaceAll("*", "");
        console.log(result3);

        ///“Çağatay  Yıldız” metnindeki kelimeler arasında 2 boşluk var bunu bir boşluk yap (REPLACE)
        var name3 = "Çağatay  Yıldız"
        var result4 = name3.replaceAll("  ", " ");
        console.log(result4);


        ///“**Tech Career**” isimli metindeki yıldızları kaldır (REPLACE)
        var name4 = "**Tech Career**"
        var result5 = name4.replaceAll("*", "");
        console.log(result5);

        ///“Tech Career” isimli metnin soluna ve sağına 3 yıldız koy. “***Tech Career***” ( Normal toplama operatörü)
        var name5 = "Tech Career"
        var result6 = "***" +name5 + "***"
        console.log(result6);

        ////“Tech Career Bilişim teknolojileri” metnindeki son kelimeyi büyült (SUBSTRING)
        let company = "Tech Career Bilişim teknolojileri";
        const result7= company.substring(20,33).toUpperCase()
        console.log(result7)
    </script>
</body>

</html>
